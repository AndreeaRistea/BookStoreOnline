@model IEnumerable<Proiect_CE.Models.Genre>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .fixed-size-img {
        width: 500px; /* sau orice altă valoare dorită pentru lățime */
        height: 300px; /* sau orice altă valoare dorită pentru înălțime */
    }

    .card {
        max-height: 120%;
        height: 100%;
    }
 </style>

<body class="body-style bg-color">
    <div id="carouselControls" class="carousel slide text-center" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block mx-auto fixed-size-img" src="~/images/im1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block mx-auto fixed-size-img" src="~/images/im2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block mx-auto fixed-size-img" src="~/images/im3.jpeg" alt="Third slide">
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>

<h1>Genuri Carti</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <a asp-controller="Books1" asp-action="BookGroupByGenre" asp-route-genreId="@item.Id" class="btn btn-info">
                        <i class="fas fa-book-open"></i> Vezi Carti
                    </a>
                </div>
            </div>
        </div>
    }
</div>